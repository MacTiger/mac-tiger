let
	/*
		`syracuse`:
			fonction qui retourne le `n`-i√®me terme de la suite de syracuse de premier terme `u`
	*/
	function syracuse (u : int, n : int) : int = (
		for i := 1 to n do
			if u / 2 * 2 = u then ( /* Si u est pair */
				u := u / 2
			) else ( /* Si u est impair */
				u := u * 3 + 1
			);
		u
	)
	var resultat := 0
in
	resultat := syracuse (1, 11);
	printi (resultat);
	print ("\n");
	resultat := syracuse (10, 13);
	printi (resultat)
end
