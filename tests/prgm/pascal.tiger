let

	var MAX := 20	

	type intArray = array of int
	var arr := intArray[MAX]
	

	function indice(n : int,k : int) : int =
		n*(n+1)/2+k
	

	function pascal3(n : int,k : int) : int =
	let
		var ind : int := 0
	in
		if k=0 | k=n then
			ind=indice(n,k)
		intArray[ind]
	end
	

	function afficherTriangle3(rang : int) = 
		for i:=0 to MAX do
			intArray[i]=0

		for n:=0 to rang do
			for k:=0 to n do
			(
				print(pascal3(n,k))
				print(" ")
			)
			print(\n)
in
	afficherTriangle3(4)
end
			 
		
